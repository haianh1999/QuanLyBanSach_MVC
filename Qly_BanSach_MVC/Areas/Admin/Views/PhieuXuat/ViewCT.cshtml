@model List<Model.EF.CTPhieuXuat>
@{
    ViewBag.Title = "Quản lý phiếu xuất";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section header {
    Danh sách chi tiết phiếu xuất
}

@section JsFooter {
    @*<script src="~/assets/admin/js/controller/userController.js"></script>*@
    <script src="~/assets/admin/js/controller/idCount.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h6>
            </div>
            <div class="card-body">
             

            </div>

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>

                            <th>STT</th>
                            <th>Mã sách</th>
                            <th>Tên sách</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                            <th>#</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>

                            <th>STT</th>
                            <th>Mã sách</th>
                            <th>Tên sách</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                            <th>#</th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.ID">

                                <td class="td-id"><p class="p-text-id"></p></td>
                                <td>@item.MaSach</td>
                                <td>@item.Sach.TenSach</td>
                                <td>@(item.SoLuong.HasValue?item.SoLuong.Value : 0)</td>
                                <td>@(item.DonGia.HasValue?item.DonGia.Value : 0)</td>
                              
                                <td>
                                    @Html.ActionLink("Sửa", "Edit" , "CTPhieuXuat", new { MaPX = item.MaPX , MaSach = item.MaSach }, new { @class = "btn btn-warning" })
                                    @*<a class="btn btn-warning" href="/Admin/TheLoai/Edit/@item.MaTL">
                                            Sửa
                                        </a>*@
                                    @Html.ActionLink("Xóa", "Delete","CTPhieuXuat", new { MaPX = @item.MaPX , MaSach = item.MaSach }, new { @class = "btn btn-danger" })

                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>


        </div>
    </div>

</div>

